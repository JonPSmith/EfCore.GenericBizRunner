@using System.Globalization
@model ServiceLayer.BookServices.AddRemovePromotionDto

<h2>Add/Update Book Promotion</h2>

<div class="form-horizontal">
    <form method="post">
        @Html.ValidationSummary(true, null, new { @class = "text-danger h4" })
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId" />
        @*We need these in case where there is an error and we need to reshow the data again*@
        <input name="Title" type="hidden" value="@Model.Title" />
        <input name="OrgPrice" type="hidden" value="@Model.OrgPrice" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Title
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Org Price</label>
            </div>
            <div class="col-sm-10">
                @(Model.OrgPrice < 0 ? "Not for sale" : Model.OrgPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">New Price</label>
            </div>
            <input asp-for="ActualPrice" class="form-control col-sm-10" />
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional Text</label>
            </div>
            <input asp-for="PromotionalText" class="form-control col-sm-10" />
            <span asp-validation-for="PromotionalText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Add/Update</button>
            </div>
        </div>

    </form>
</div>